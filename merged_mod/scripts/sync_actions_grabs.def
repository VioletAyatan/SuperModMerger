    // Viral power attack
    // Slot 0 - Actor being hit
    // Slot 1 - Attacker
    Group("ViralAttackPower")
    {
        Category("Combat");

        SyncAction("ViralAttackPowerA")
        {
            Conditions()
            {
                MaxDistance(0, 1, 2.3);
                DirectionOffset(0, 1, 180, 8);
                InAir(0, false);
                IsBusy(0,false);
            }

            Events()
            {
                Event(ANIM_EVENT, 1, ANIM_EVENT_GIVE_GRAB_DAMAGE)
                {
                    DealDamage(1, 0, "viral_attack_power@sync_action_damage_presets.scr");
                }
            }

            States()
            {
                StartState("ViralAttackPowerHit");

                State("ViralAttackPowerHit")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_attack_power_victim_end_01");
                    Animation(1, "m_vir_syncaction_grab_attack_power_attacker_end_01", 0.2);

                    AnimationScript(1, "sync_action_anims_ai.scr");

                    BlendPosition(0, 0, 0.05, 0.75);
                    BlendDirection(0, 0, 0.05, 0.75);

                    BlendPosition(1, 0, 0.03, 0.3);
                    BlendDirection(1, 0, 0.03, 0.3);

                    BlendLookDirection(0.15);
                    DisableGravity(1);
                    BlockBreakWhenDamaged(0);

                    ActionCenter(0);
                    ActionCenterDirection(0, 1);

                    Transition("ViralAttackPowerEnd")
                    {
                        AnimationFinished(0);
                    }
                }

                State("ViralAttackPowerEnd")
                {
                    RequiredActors(1);

                    Animation(1, "m_vir_syncaction_grab_attack_power_attacker_end_01", 0.2);
                    AnimationScript(1, "sync_action_anims_ai.scr");

                    ActionCenter(0);
                    RemoveActor(0);
                    DisableGravity(1);
                    EndTransition()
                    {
                        AnimationFinished();
                    }
                }
            }
        }
    }




    // Viral grabs player in shimmy
    // Slot 0 - Actor being hit
    // Slot 1 - Attacker
    Group("ViralGrabShimmy")
    {
        Category("Combat");

        SyncAction("ViralGrabShimmyA")
        {
            Conditions()
            {
                InClimb(0, true);
                //InAir(0, false);
                //IsBusy(0,false);
            }

            Events()
            {
            }

            States()
            {
                StartState("ViralGrabShimmyBegin");

                State("ViralGrabShimmyBegin")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_shimmy_victim_01_begin");
                    Animation(1, "m_vir_syncaction_grab_shimmy_attacker_01_begin", 0.2);

                    AnimationScript(1, "sync_action_anims_ai.scr");

                    BlendPosition(0, 0, 0.2, 0.75);
                    BlendDirection(0, 0, 0.2, 0.75);
                    BlendLookDirection(0.2);

                    BlendPosition(1, 0, 0.2, 0.75);
                    BlendDirection(1, 0, 0.2, 0.75);

                    ActionCenter(0);
                    ActionCenterSource(ACTION_CENTER_HOOK_DIR);

                    DisablePhysics(0);
                    DisablePhysics(1);

                    BlockBreakWhenDamaged(0);

                    ApplyDof(0, 0.2, 0.4, 0.3, 5, 0.2);

                    Transition("ViralGrabShimmyLoop")
                    {
                        AnimationFinished(0);
                    }
                }

                State("ViralGrabShimmyLoop")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_shimmy_victim_01_loop", 0.1, true);
                    Animation(1, "m_vir_syncaction_grab_shimmy_attacker_01_loop", 0.1, true);

                    AnimationScript(1, "sync_action_anims_ai.scr");

                    ActionCenter(0);
                    ApplyDof(0, 0.2, 0.4, 0.5, 7, 0.2);
                    StartTappingGame(0, 0.2, 0.5, 0.2, 2, false);
                    DisablePhysics(0);
                    DisablePhysics(1);
                    BlockBreakWhenDamaged(0);

                    StaminaCost(0, 0.2, true);
                    Transition("ViralGrabShimmyFallStart")
                    {
                        WaitTime(2.5);
                        //TappingGameValue(0.75);
                    }
                }

                State("ViralGrabShimmyFallStart")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_shimmy_victim_01_fall_start");
                    Animation(1, "m_vir_syncaction_grab_shimmy_attacker_01_fall_start", 0.2);
                    
                    AnimationScript(1, "sync_action_anims_ai.scr");
                    
                    ApplyDof(0, 0.2, 0.4, 0.6, 7, 0.2);
                    ActionCenter(0);
                    DisablePhysics(0);
                    DisablePhysics(1);
                    BlockBreakWhenDamaged(0);

                    Transition("ViralGrabShimmyFallLoop")
                    {
                        AnimationFinished(0);
                    }
                }

                State("ViralGrabShimmyFallLoop")
                {
                    RequiredActors(0, 1);
                    ApplyDof(0, 0.2, 0.4, 1, 6, 0.2);
                    BlendPosition(0, 0, 0.05, 0.5);
                    BlendDirection(0, 0, 0.05, 0.5);
                    BlendPosition(1, 0, 0.05, 0.5);
                    BlendDirection(1, 0, 0.05, 0.5);
                    PhysicalImpulse(0, [0.0, -6.0, 0.0]);
                    BlockBreakWhenDamaged(0);

                    Animation(0, "m_fpp_syncaction_grab_shimmy_victim_01_fall_loop", 0.1, true);
                    Animation(1, "m_vir_syncaction_grab_shimmy_attacker_01_fall_loop", 0.1, true);

                    AnimationScript(1, "sync_action_anims_ai.scr");

                    DisablePhysics(1);

                    ActionCenter(0);
                    ResampleActionCenter();
                    ActionCenterSource(ACTION_CENTER_ACTOR_ATTACHED);

                    Transition("ViralGrabShimmyFallBreak")
                    {
                        InAir(0, false);
                    }
                }

                State("ViralGrabShimmyFallBreak")
                {
                    RequiredActors(0, 1);
                    ApplyDof(0, 0.15, 0.4, 1, 6, 0.2);
                    
                    Animation(0, "m_fpp_syncaction_grab_shimmy_victim_01_fall_end");
                    Animation(1, "m_vir_syncaction_grab_shimmy_attacker_01_fall_end", 0.2);

                    AnimationScript(1, "sync_action_anims_ai.scr");

                    ActionCenter(0);
                    ResampleActionCenter();
                    BlockBreakWhenDamaged(0);

                    DisablePhysics(1);

                    Transition("ViralGrabShimmyEnd")
                    {
                        AnimationFinished();
                    }
                }

                State("ViralGrabShimmyEnd")
                {
                    RequiredActors(1);
                    ApplyDof(0, 0.0, 0.4, 1, 6, 0.2);

                    Animation(1, "m_vir_syncaction_grab_shimmy_attacker_01_fall_end", 0.2);
                    AnimationScript(1, "sync_action_anims_ai.scr");

                    ActionCenter(0);
                    RemoveActor(0);

                    DisablePhysics(1);

                    EndTransition()
                    {
                        AnimationFinished();
                    }
                }
            }
        }
    }


    Group("ViralGrabShimmyShort") // currently not used because there were problems with finishing in shimmy
    {
        Category("Combat");

        SyncAction("ViralGrabShimmyShortA")
        {
            Conditions()
            {
                InClimb(0, true);
            }

            Events()
            {
            }

            States()
            {
                StartState("ViralGrabShimmyBegin");

                State("ViralGrabShimmyBegin")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_shimmy_short_victim_01");
                    Animation(1, "m_vir_syncaction_grab_shimmy_short_attacker_01", 0.2);

                    AnimationScript(1, "sync_action_anims_ai.scr");

                    BlendPosition(0, 0, 0.2, 0.75);
                    BlendDirection(0, 0, 0.2, 0.75);
                    BlendLookDirection(0.5);

                    BlendPosition(1, 0, 0.2, 0.75);
                    BlendDirection(1, 0, 0.2, 0.75);

                    ActionCenter(0);
                    ActionCenterDirection(0);

                    EndTransition()
                    {
                        AnimationFinished();
                    }
                }
            }
        }
    }



















                                /***********************************************************************/
                                /******************************BITERGRABS*******************************/
                                /***********************************************************************/
    // Biter grab
    // Slot 0 - Grabbed actor
    // Slot 1 - Biter
    // Slot 2 - Second biter in the multigrab variation
    Group("BiterGrab")
    {
        Category("Combat");
        EnemyGrabGroup();
		
        SyncAction("BiterGrabA")
        {
            MeleeAttackEscapeTime(BITER_GRAB_MELEE_ATTACK_ESCAPE_WINDOW);

            Conditions()
            {
                Tags("vs_player");
                MaxDistance(0, 1, 1.7);
                InAir(0, false);
                IsBusy(0,false);
                InClimb(0,false);
                HorzPositionOffset(0, 1, 40);
                PlayerVariableBool(0, "InfectedGrabBlocked", false);
                SpaceInSimpleDirection(1, "FORWARD", 0.5);
                WindmillAttackActive(0, false);
                PlayerIsNotDuringInitialAttack(0);
                AttackSyncActionScheduled(1);
                PlayerAllowsGrab(0, 1);
            }
			
			SoundEvents()
			{
				ExitSoundEvent("set_biter_grab_out");
			}

            InputConfig()
            {
                ResetInputAction("_ACTION_USE_EQUIPEMENT");
                ResetInputAction("_ACTION_BLOCK");
				ResetInputAction("_ACTION_KICK");
            }

            Events()
            {
                Event(ANIM_EVENT, 1, SYNCACTION_AI_BODY_DAMAGE)
                {
                    // Fake damage to attacker to damage his head
                    DealDamage(0, 1, "biter_grab_fake@sync_action_damage_presets.scr")
                    {
                        DamageHelper(0, "R_HAND");
                        UseInstigatorForward();
                    }
                    DealDamage(0, 1, "biter_grab_enter_unstable@sync_action_damage_presets.scr")
                    {
                        DamageProbability(0.2);
                        DamageMaxHealth(1.0);
                    }
                }
                Event(ANIM_EVENT, 1, ANIM_EVENT_GIVE_GRAB_DAMAGE)
                {
                    DealDamage(1, 0, "biter_grab@sync_action_damage_presets.scr");
                }
                Event(ANIM_EVENT, 0, SYNCACTION_TRIGGER_DEATH)
                {
                    Tags("CanKillAI")
                    {
                        DealDamage(0, 1, "biter_grab_kill_ragdoll@sync_action_damage_presets.scr");
                    }

                    Tags("!CanKillAI")
                    {
                        DealDamage(0, 1, "takedown_non_lethal@sync_action_damage_presets.scr")
                        {
                            UseDifficultyScaling();
                        }
                    }
                }
                Event(ANIM_EVENT, 0, SYNCACTION_SHOW_ITEM_ALT)
                {
                    ShowInventoryItem(0, "RIGHT")
                    {
                        use ItemGroup_UVFlare();
                    }
                }
                Event(ANIM_EVENT, 0, SYNCACTION_ACTIVATE_ITEM_ALT)
                {
                    ActivateInventoryItem(0, "flare_uv");
                }
                Event(ANIM_EVENT, 0, SYNCACTION_DROP_ITEM_ALT)
                {
                    DropInventoryItem(0, "flare_uv");
                    RemoveInventoryItem(0)
                    {
                        use ItemGroup_UVFlare();
                    }
                }
                Event(ANIM_EVENT, 0, SYNCACTION_SHOW_ITEM_ALT2)
                {
                    ShowInventoryItem(0, "RIGHT")
                    {
                        use ItemGroup_ThrowableKnife();
                    }
                }
                Event(ANIM_EVENT, 0, SYNCACTION_DROP_ITEM_ALT2)
                {
                    HideInventoryItem(0);
                    RemoveInventoryItem(0)
                    {
                        use ItemGroup_ThrowableKnife();
                    }
                }
                Event(ANIM_EVENT, 1, SYNCACTION_MAKE_NOISE)
                {
                    MakeNoise(1, "biter_grab");
                }
				Event(ANIM_EVENT, 0, SYNCACTION_AI_BODY_DAMAGE_SECOND)
                {
                    DealDamage(0, 1, "biter_grab_escape_body_hole@sync_action_damage_presets.scr")
                    {
                        DamageHelper(0, "DamageHelper");
                    }
                }
				Event(ANIM_EVENT, 1, ANIM_EVENT_APPLY_GRAB_DAMAGE)
                {
                    DealDamage(0, 1, "biter_grab_ragdoll@sync_action_damage_presets.scr")
                    {
                        DamageHelper(0, "R_SOLE");
                        UseInstigatorForward();
                    }
                    RemoveActor(1);
                }
				/*
				Event(ANIM_EVENT, 0, ANIM_EVENT_PUNCH_HIT)
                {
                    ActivateXRay(0, 1, 1.0, "SPINE3");
                }
				*/
            }

            States()
            {
                StartState("BiterGrabBegin");

                State("BiterGrabBegin")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_victim_01_start");
                    Animation(1, "m_bit_syncaction_grab_attacker1_01_start", 0.2);

                    AnimationScript(1, "sync_action_anims_ai_ft.scr");

                    BlendLookDirection(0.2);

                    BlendPosition(0, 0, 0.3, 0.3, true);
                    BlendDirection(0, 0, 0.3, 0.3, true);

                    BlendPosition(1, 0, 0.2, 0.3, true);
                    BlendDirection(1, 0, 0.2, 0.3, true);

                    ActionCenter(0);
                    ActionCenterDirection(0, 1);
					ActionCenterVerticalCorrection();
                    ActionCenterLiveErrorCorrection();
					
					ApplyLegsCorrectionPostprocess();

                    DisableGravity(0);
                    DisableGravity(1);
                    FinisherPhysicsSetting(1);

                    BreakCrouch(0);
                    BlockBreakWhenDamaged(0);

                    InputPrompt()
                    {
                        Action("_ACTION_USE_EQUIPEMENT");
                        Icon("weapon_throw_knives");
	                    Counters()
                        {
                            ItemsInInventory(0)
                            {
                                use ItemGroup_ThrowableKnife();
                            }
                        }
                        Conditions()
                        {
                            InventoryItemRequired(0)
                            {
                                use ItemGroup_ThrowableKnife();
                            }

                            PlayerVariableBool(0, "FinisherBackWithItemEnabled", true);

                            EventTriggered(0, ANIM_EVENT, SYNCACTION_ALLOW_QUICK_ESCAPE);
							PlayerLevelThreshold(0, 11, true);
                        }
                    }
					
					InputPrompt()
                    {
                        Action("_ACTION_KICK");
                        Icon("skill_instant_grab_escape");
						Conditions()
						{
							PlayerLevelThreshold(0, 11, false);
						}
                    }

                    Transition("BiterGrabSuccessEndStab")
                    {
                        InventoryItemRequired(0)
                        {
                            use ItemGroup_ThrowableKnife();
                        }

                        PlayerVariableBool(0, "FinisherBackWithItemEnabled", true);

                        EventTriggered(0, ANIM_EVENT, SYNCACTION_ALLOW_QUICK_ESCAPE);

                        Input(0, "_ACTION_USE_EQUIPEMENT", 0.9);
						PlayerLevelThreshold(0, 11, true);
                    }
                    
                    Transition("BiterGrabLoop")
                    {
                        AnimationFinished();
                    }
					
					
					Transition("BiterGrabInstantEscape")
                    {
                        Input(0, "_ACTION_KICK", 1.0);
						PlayerLevelThreshold(0, 11, false);
                    }
                }

                State("BiterGrabLoop")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_victim_01_loop", 0.3, true);
                    Animation(1, "m_bit_syncaction_grab_attacker1_01_loop", 0.3, true);

                    AnimationScript(1, "sync_action_anims_ai_ft.scr");

                    ActionCenter(0);
					ActionCenterVerticalCorrection();
                    ActionCenterLiveErrorCorrection();

					ApplyLegsCorrectionPostprocess();

                    DisableGravity(0);
                    DisableGravity(1);
                    FinisherPhysicsSetting(1);

                    Mergeable(true);

                    StartTappingGame(0, 0.2, 0.5, 2.5, 6, false);

                    AllowLook(60.0, 30.0);

                    BreakCrouch(0);
                    BlockBreakWhenDamaged(0);

                    InputPrompt()
                    {
                        Action("_ACTION_USE_EQUIPEMENT");
                        Icon("weapon_throw_knives");
						Counters()
                        {
                            ItemsInInventory(0)
                            {
                                use ItemGroup_ThrowableKnife();
                            }
                        }
                        Conditions()
                        {
                            InventoryItemRequired(0)
                            {
                                use ItemGroup_ThrowableKnife();
                            }

                            PlayerVariableBool(0, "FinisherBackWithItemEnabled", true);
                        }
                    }

                    InputPrompt()
                    {
                        Action("_ACTION_BLOCK");
                        Icon("equipment_flare");
						Counters()
                        {
                            ItemsInInventory(0)
                            {
                                use ItemGroup_UVFlare();
                            }
                        }
                        Conditions()
                        {
                            InventoryItemRequired(0)
                            {
                                use ItemGroup_UVFlare();
                            }
                        }
                    }

                    Transition("BiterGrabSuccessEndStab")
                    {
                        InventoryItemRequired(0)
                        {
                            use ItemGroup_ThrowableKnife();
                        }

                        PlayerVariableBool(0, "FinisherBackWithItemEnabled", true);

                        Input(0, "_ACTION_USE_EQUIPEMENT", 0.9);
                    }

                    Transition("BiterGrabSuccessEndFlare")
                    {
                        InventoryItemRequired(0)
                        {
                            use ItemGroup_UVFlare();
                        }

                        Input(0, "_ACTION_BLOCK", 0.9);
                    }

                    Transition("BiterGrabSuccessBegin")
                    {
                        TappingGameValue(0.25);
                    }
                
                    EndTransition()
                    {
                        IsInUVLight(1);
                    }
                }

                State("BiterGrabSuccessBegin")
                {
                    RequiredActors(0, 1);

                    Animation(0, "m_fpp_syncaction_grab_victim_01_push");
                    Animation(1, "m_bit_syncaction_grab_attacker1_01_push", 0.2);

                    AnimationScript(1, "sync_action_anims_ai_ft.scr");

                    ActionCenter(0);
					ActionCenterVerticalCorrection();
                    ActionCenterLiveErrorCorrection();

					ApplyLegsCorrectionPostprocess();

                    DisableGravity(0);
                    DisableGravity(1);

                    Mergeable(true);

                    StartTappingGame(0, 0.2, 0.5, 2.5, 6, false);

                    BreakCrouch(0);
                    BlockBreakWhenDamaged(0);

                    InputPrompt()
                    {
                        Action("_ACTION_USE_EQUIPEMENT");
                        Icon("weapon_throw_knives");
						Counters()
                        {
                            ItemsInInventory(0)
                            {
                                use ItemGroup_ThrowableKnife();
                            }
                        }
                        Conditions()
                        {
                            InventoryItemRequired(0)
                            {
                                use ItemGroup_ThrowableKnife();
                            }

                            PlayerVariableBool(0, "FinisherBackWithItemEnabled", true);
                        }
                    }

                    InputPrompt()
                    {
                        Action("_ACTION_BLOCK");
                        Icon("equipment_flare");
						Counters()
                        {
                            ItemsInInventory(0)
